---
import ThemeToggle from "../ThemeToggle.astro";
---

<div class="desktop-taskbar" id="desktop-taskbar">
  <div class="taskbar-left">
    <button class="taskbar-start-btn" id="start-btn" aria-label="Start menu">
      <span class="start-icon">ðŸª´</span>
      <span class="start-text">Portfolio</span>
    </button>
  </div>
  <div class="taskbar-center" id="taskbar-items">
    <!-- Minimized windows appear here dynamically -->
  </div>
  <div class="taskbar-right">
    <ThemeToggle />
    <span class="taskbar-clock" id="taskbar-clock"></span>
  </div>
</div>

<style>
  .desktop-taskbar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 48px;
    background: var(--color-surface);
    border-top: 1px solid rgba(100, 100, 100, 0.25);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 12px;
    z-index: 9999;
    backdrop-filter: blur(20px);
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
  }

  .taskbar-left {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .taskbar-start-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 4px 12px;
    border: 1px solid rgba(100, 100, 100, 0.2);
    border-radius: 6px;
    background: transparent;
    color: var(--color-primary);
    cursor: pointer;
    font-family: inherit;
    font-size: 0.75rem;
    transition: all 0.15s;
  }

  .taskbar-start-btn:hover {
    background: rgba(213, 96, 29, 0.1);
    border-color: var(--color-accent);
  }

  .start-icon {
    font-size: 1.1rem;
  }

  .start-text {
    font-weight: 500;
  }

  .taskbar-center {
    display: flex;
    align-items: center;
    gap: 4px;
    flex: 1;
    justify-content: center;
    overflow-x: auto;
    padding: 0 8px;
  }

  .taskbar-right {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .taskbar-clock {
    font-size: 0.7rem;
    color: var(--color-muted);
    white-space: nowrap;
  }

  /* Taskbar item (for minimized windows) - styled via JS */
  :global(.taskbar-item) {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 4px 10px;
    border: 1px solid rgba(100, 100, 100, 0.15);
    border-radius: 6px;
    background: transparent;
    color: var(--color-secondary);
    cursor: pointer;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
    font-size: 0.7rem;
    transition: all 0.15s;
    white-space: nowrap;
    max-width: 150px;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  :global(.taskbar-item:hover) {
    background: rgba(213, 96, 29, 0.1);
    color: var(--color-accent);
  }

  :global(.taskbar-item.active) {
    border-color: var(--color-accent);
    color: var(--color-accent);
    background: rgba(213, 96, 29, 0.08);
  }

  @media (max-width: 640px) {
    .start-text {
      display: none;
    }
    .taskbar-clock {
      font-size: 0.65rem;
    }
  }
</style>

<script>
  function updateClock() {
    const clock = document.getElementById('taskbar-clock');
    if (!clock) return;
    const now = new Date();
    const h = now.getHours().toString().padStart(2, '0');
    const m = now.getMinutes().toString().padStart(2, '0');
    clock.textContent = `${h}:${m}`;
  }
  updateClock();
  setInterval(updateClock, 30000);
</script>
