---
interface Props {
  id: string;
  title: string;
  width?: string;
  height?: string;
  defaultOpen?: boolean;
}

const { id, title, width = "600px", height = "450px", defaultOpen = false } = Astro.props;
---

<div
  class="desktop-window"
  data-window-id={id}
  data-default-open={defaultOpen ? "true" : "false"}
  style={`width: ${width}; height: ${height}; display: none;`}
>
  <!-- Title bar -->
  <div class="window-titlebar">
    <div class="window-controls">
      <button class="window-btn window-btn-close" data-action="close" aria-label="Close window">
        <svg viewBox="0 0 12 12" width="10" height="10"><path d="M1 1l10 10M11 1L1 11" stroke="currentColor" stroke-width="1.5" fill="none"/></svg>
      </button>
      <button class="window-btn window-btn-minimize" data-action="minimize" aria-label="Minimize window">
        <svg viewBox="0 0 12 12" width="10" height="10"><path d="M2 6h8" stroke="currentColor" stroke-width="1.5" fill="none"/></svg>
      </button>
      <button class="window-btn window-btn-maximize" data-action="maximize" aria-label="Maximize window">
        <svg viewBox="0 0 12 12" width="10" height="10"><rect x="1.5" y="1.5" width="9" height="9" rx="1" stroke="currentColor" stroke-width="1.5" fill="none"/></svg>
      </button>
    </div>
    <span class="window-title">{title}</span>
    <div class="window-controls-spacer"></div>
  </div>

  <!-- Content area -->
  <div class="window-content">
    <slot />
  </div>

  <!-- Resize handle -->
  <div class="window-resize-handle"></div>
</div>

<style>
  .desktop-window {
    position: absolute;
    background: var(--color-surface);
    border: 1px solid rgba(100, 100, 100, 0.3);
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3), 0 2px 8px rgba(0, 0, 0, 0.2);
    min-width: 320px;
    min-height: 200px;
    display: flex;
    flex-direction: column;
    backdrop-filter: blur(20px);
    transition: box-shadow 0.2s;
  }

  .desktop-window.active {
    box-shadow: 0 12px 48px rgba(0, 0, 0, 0.4), 0 4px 12px rgba(0, 0, 0, 0.25);
  }

  .desktop-window.maximized {
    top: 0 !important;
    left: 0 !important;
    width: 100% !important;
    height: calc(100vh - 48px) !important;
    border-radius: 0;
  }

  .window-titlebar {
    display: flex;
    align-items: center;
    padding: 10px 14px;
    background: rgba(0, 0, 0, 0.05);
    border-bottom: 1px solid rgba(100, 100, 100, 0.15);
    cursor: default;
    flex-shrink: 0;
    gap: 10px;
    user-select: none;
  }

  :global(.dark) .window-titlebar {
    background: rgba(255, 255, 255, 0.03);
  }

  .window-controls {
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .window-controls-spacer {
    width: 62px;
  }

  .window-btn {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    color: transparent;
    transition: all 0.15s;
  }

  .window-btn:hover {
    color: rgba(0, 0, 0, 0.6);
  }

  .window-btn-close {
    background: #ff5f57;
  }
  .window-btn-close:hover {
    background: #ff3b30;
  }

  .window-btn-minimize {
    background: #febc2e;
  }
  .window-btn-minimize:hover {
    background: #f5a623;
  }

  .window-btn-maximize {
    background: #28c840;
  }
  .window-btn-maximize:hover {
    background: #1aab29;
  }

  .window-title {
    flex: 1;
    text-align: center;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
    font-size: 0.75rem;
    color: var(--color-muted);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .window-content {
    flex: 1;
    overflow-y: auto;
    overflow-x: hidden;
    padding: 16px 20px;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
    font-size: 0.8rem;
    color: var(--color-secondary);
  }

  .window-resize-handle {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 16px;
    height: 16px;
    cursor: nwse-resize;
  }

  /* Mobile: windows take full width */
  @media (max-width: 640px) {
    .desktop-window {
      width: 100% !important;
      height: calc(100vh - 48px) !important;
      top: 0 !important;
      left: 0 !important;
      border-radius: 0;
      min-width: unset;
    }
    .window-resize-handle {
      display: none;
    }
  }
</style>
