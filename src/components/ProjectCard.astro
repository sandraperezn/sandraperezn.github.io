---
interface Props {
  id: string;
  title: string;
  description: string;
  image?: string;
  link?: string;
  engine?: string;
  language?: string;
  year?: string;
  field?: string;
  tags?: string[];
  longDescription?: string;
}

const { id, title, description, image, engine, language, year, field, tags = [] } = Astro.props;

// Build combined tags from explicit fields + extra tags
const allTags: { label: string; category: string }[] = [];
if (engine) allTags.push({ label: engine, category: "engine" });
if (language) allTags.push({ label: language, category: "language" });
if (year) allTags.push({ label: year, category: "year" });
if (field) allTags.push({ label: field, category: "field" });
tags.forEach((t) => allTags.push({ label: t, category: "other" }));
---

<div
  class="project-card group"
  data-project-id={id}
  data-engine={engine?.toLowerCase() || ""}
  data-language={language?.toLowerCase() || ""}
  data-year={year || ""}
  data-field={field?.toLowerCase() || ""}
  data-tags={tags.map(t => t.toLowerCase()).join(",")}
  role="button"
  tabindex="0"
>
  <div class="card-inner">
    <div class="card-image">
      {image ? (
        <img src={image} alt={title} loading="lazy" />
      ) : (
        <div class="card-placeholder">
          <span>ðŸŽ®</span>
        </div>
      )}
    </div>
    <div class="card-body">
      <h3 class="card-title">{title}</h3>
      <p class="card-desc">{description}</p>
      <div class="card-tags">
        {allTags.map(({ label, category }) => (
          <span class={`card-tag tag-${category}`}>{label}</span>
        ))}
      </div>
    </div>
  </div>
</div>

<style>
  .project-card {
    border-radius: 10px;
    overflow: hidden;
    background: var(--color-surface);
    border: 1px solid rgba(100, 100, 100, 0.15);
    transition: transform 0.2s, box-shadow 0.2s;
    cursor: pointer;
    height: auto;
  }

  .project-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
  }

  .project-card a {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .card-inner {
    display: flex;
    flex-direction: column;
  }

  .card-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: rgba(100, 100, 100, 0.08);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .project-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    opacity: 0.3;
  }

  .card-body {
    padding: 12px 14px;
    display: flex;
    flex-direction: column;
    gap: 6px;
    flex: 1;
  }

  .card-title {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-primary);
    margin: 0;
    line-height: 1.3;
  }

  .card-desc {
    font-size: 0.7rem;
    color: var(--color-muted);
    margin: 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    margin-top: auto;
    padding-top: 6px;
  }

  .card-tag {
    font-size: 0.6rem;
    padding: 2px 8px;
    border-radius: 999px;
    font-weight: 500;
    border: 1px solid transparent;
    white-space: nowrap;
  }

  .tag-engine {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
    border-color: rgba(59, 130, 246, 0.2);
  }

  .tag-language {
    background: rgba(34, 197, 94, 0.1);
    color: #22c55e;
    border-color: rgba(34, 197, 94, 0.2);
  }

  .tag-year {
    background: rgba(234, 179, 8, 0.1);
    color: #ca8a04;
    border-color: rgba(234, 179, 8, 0.2);
  }

  .tag-field {
    background: rgba(236, 72, 153, 0.1);
    color: #ec4899;
    border-color: rgba(236, 72, 153, 0.2);
  }

  .tag-other {
    background: rgba(168, 85, 247, 0.1);
    color: #a855f7;
    border-color: rgba(168, 85, 247, 0.2);
  }

  /* hidden by filter */
  .project-card.hidden {
    display: none;
  }
</style>
