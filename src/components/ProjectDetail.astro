---
interface Props {
  id: string;
  title: string;
  description: string;
  image?: string;
  link?: string;
  engine?: string;
  language?: string;
  year?: string;
  field?: string;
  tags?: string[];
  longDescription?: string;
}

const { id, title, description, image, link, engine, language, year, field, tags = [], longDescription } = Astro.props;

// Build combined tags from explicit fields + extra tags
const allTags: { label: string; category: string }[] = [];
if (engine) allTags.push({ label: engine, category: "engine" });
if (language) allTags.push({ label: language, category: "language" });
if (year) allTags.push({ label: year, category: "year" });
if (field) allTags.push({ label: field, category: "field" });
tags.forEach((t) => allTags.push({ label: t, category: "other" }));
---

<div class="project-detail" data-detail-id={id} style="display: none;">
  <button class="back-btn" data-action="back-to-gallery">
    <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M19 12H5M12 19l-7-7 7-7"/>
    </svg>
    <span>Back to projects</span>
  </button>

  <div class="detail-content">
    <div class="detail-header">
      <div class="detail-image">
        {image ? (
          <img src={image} alt={title} />
        ) : (
          <div class="detail-placeholder">
            <span>ðŸŽ®</span>
          </div>
        )}
      </div>
      
      <div class="detail-info">
        <h2 class="detail-title">{title}</h2>
        
        <div class="detail-tags">
          {allTags.map(({ label, category }) => (
            <span class={`detail-tag tag-${category}`}>{label}</span>
          ))}
        </div>

        <p class="detail-desc">{longDescription || description}</p>

        {link && (
          <a href={link} target="_blank" rel="noopener noreferrer" class="detail-link">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
            </svg>
            <span>View Project</span>
          </a>
        )}
      </div>
    </div>

    <div class="detail-body">
      <div class="detail-section">
        <h3>About this project</h3>
        <p>{longDescription || description}</p>
      </div>

      <div class="detail-meta">
        {engine && (
          <div class="meta-item">
            <span class="meta-label">Engine</span>
            <span class="meta-value">{engine}</span>
          </div>
        )}
        {language && (
          <div class="meta-item">
            <span class="meta-label">Language</span>
            <span class="meta-value">{language}</span>
          </div>
        )}
        {year && (
          <div class="meta-item">
            <span class="meta-label">Year</span>
            <span class="meta-value">{year}</span>
          </div>
        )}
        {field && (
          <div class="meta-item">
            <span class="meta-label">Field</span>
            <span class="meta-value">{field}</span>
          </div>
        )}
      </div>
    </div>
  </div>
</div>

<style>
  .project-detail {
    height: 100%;
  }

  .back-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 14px;
    background: transparent;
    border: 1px solid rgba(100, 100, 100, 0.3);
    border-radius: 8px;
    color: var(--color-muted);
    font-size: 0.75rem;
    font-family: inherit;
    cursor: pointer;
    transition: all 0.15s;
    margin-bottom: 16px;
  }

  .back-btn:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .detail-content {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .detail-header {
    display: flex;
    gap: 20px;
  }

  .detail-image {
    width: 200px;
    flex-shrink: 0;
    aspect-ratio: 16 / 9;
    border-radius: 10px;
    overflow: hidden;
    background: rgba(100, 100, 100, 0.08);
  }

  .detail-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .detail-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    opacity: 0.3;
  }

  .detail-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .detail-title {
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--color-primary);
    margin: 0;
  }

  .detail-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .detail-tag {
    font-size: 0.65rem;
    padding: 3px 10px;
    border-radius: 999px;
    font-weight: 500;
    border: 1px solid transparent;
  }

  .tag-engine {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
    border-color: rgba(59, 130, 246, 0.2);
  }

  .tag-language {
    background: rgba(34, 197, 94, 0.1);
    color: #22c55e;
    border-color: rgba(34, 197, 94, 0.2);
  }

  .tag-year {
    background: rgba(234, 179, 8, 0.1);
    color: #ca8a04;
    border-color: rgba(234, 179, 8, 0.2);
  }

  .tag-field {
    background: rgba(236, 72, 153, 0.1);
    color: #ec4899;
    border-color: rgba(236, 72, 153, 0.2);
  }

  .tag-other {
    background: rgba(168, 85, 247, 0.1);
    color: #a855f7;
    border-color: rgba(168, 85, 247, 0.2);
  }

  .detail-desc {
    font-size: 0.85rem;
    color: var(--color-secondary);
    line-height: 1.6;
    margin: 0;
  }

  .detail-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    background: var(--color-accent);
    color: white;
    border-radius: 8px;
    font-size: 0.75rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.15s;
    width: fit-content;
    margin-top: 6px;
  }

  .detail-link:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .detail-body {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding-top: 16px;
    border-top: 1px solid rgba(100, 100, 100, 0.15);
  }

  .detail-section h3 {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-primary);
    margin: 0 0 8px 0;
  }

  .detail-section p {
    font-size: 0.8rem;
    color: var(--color-muted);
    line-height: 1.6;
    margin: 0;
  }

  .detail-meta {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: 12px;
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: 2px;
    padding: 10px 12px;
    background: rgba(100, 100, 100, 0.05);
    border-radius: 8px;
  }

  .meta-label {
    font-size: 0.65rem;
    color: var(--color-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .meta-value {
    font-size: 0.85rem;
    color: var(--color-primary);
    font-weight: 500;
  }

  @media (max-width: 500px) {
    .detail-header {
      flex-direction: column;
    }

    .detail-image {
      width: 100%;
    }
  }
</style>
